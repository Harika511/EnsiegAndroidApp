<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_55"
            android:background="@color/transparent_actionbar"
            android:orientation="horizontal"
            android:weightSum="2" >

            <ImageView
                android:id="@+id/loginback"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:contentDescription="back"
                android:gravity="center"
                android:paddingBottom="@dimen/dimen_15"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_15"
                android:scaleX="0.95"
                android:scaleY="0.95"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/txt_login_hdr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:gravity="center_vertical"
                android:text="LOGIN"
                android:textColor="@android:color/black"
                android:textSize="@dimen/little_small_textsize" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_50"
                        android:contentDescription="ensieglogo"
                        android:src="@drawable/ensieg_logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/dimen_30"
                        android:layout_marginRight="@dimen/dimen_30"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:orientation="vertical" >

                        <EditText
                            android:id="@+id/et_login_mbl"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_60"
                            android:background="@android:color/white"
                            android:cursorVisible="true"
                            android:gravity="bottom"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/little_small_textsize" />

                        <TextView
                            android:id="@+id/tv_line_mbl"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/transperent_black" />

                        <EditText
                            android:id="@+id/et_login_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_60"
                            android:background="@android:color/white"
                            android:cursorVisible="true"
                            android:ems="10"
                            android:gravity="bottom"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/little_small_textsize" >
                        </EditText>

                        <TextView
                            android:id="@+id/tv_line_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:background="@color/transperent_black" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_login"
                        android:layout_width="@dimen/dimen_250dp"
                        android:layout_height="@dimen/dimen_50"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimen_30"
                        android:background="@drawable/next_btn_bg"
                        android:text="LOGIN"
                        android:textColor="@drawable/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_frgt_pwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="14dp"
                        android:text="Forgot  Password?"
                        android:textSize="@dimen/more_small_textsize" />

                    <!-- <TextView -->
                    <!-- android:layout_width="match_parent" -->
                    <!-- android:layout_height="1dp" -->
                    <!-- android:layout_below="@id/tv_frgt_pwd" -->
                    <!-- android:layout_gravity="center_horizontal" -->
                    <!-- android:layout_marginLeft="@dimen/dimen_110" -->
                    <!-- android:layout_marginRight="@dimen/dimen_110" -->
                    <!-- android:background="@android:color/black" -->


                    <!-- android:layout_marginTop="1dp" /> -->
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>